{
  "name": "NewsApp",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest",
    "install-all": "npm i && cd ios && pod install --verbose && cd ..",
    "install-pods": "cd ios && pod install --verbose && cd ..",
    "clean-android": "cd android && ./gradlew clean && cd ..",
    "update-pods": "cd ios && pod repo update && pod update && cd ..",
    "clean:android:gradle": "rm -rf android/.gradle && rm -rf .gradle &&: rm -rf ~/.gradle && cd android && ./gradlew clean && cd ..",
    "clean:ios:cocopods": "rm -rf ~/Library/Caches/CocoaPods && rm -rf ios/Pods",
    "post-install": "react-native setup-ios-permissions && cd ios && pod install --verbose && cd ..",
    "build-apk": "npx react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res",
    "adb-reverse": "adb reverse tcp:8081 tcp:8081"
  },
  "dependencies": {
    "@react-native-community/netinfo": "^9.4.1",
    "@react-navigation/bottom-tabs": "^6.5.8",
    "@react-navigation/material-top-tabs": "^6.6.3",
    "@react-navigation/native": "^6.1.7",
    "@react-navigation/native-stack": "^6.9.13",
    "@reduxjs/toolkit": "^1.9.5",
    "axios": "^1.4.0",
    "moment": "^2.29.4",
    "react": "18.2.0",
    "react-native": "0.72.3",
    "react-native-dotenv": "^3.4.9",
    "react-native-fast-image": "^8.6.3",
    "react-native-pager-view": "^6.2.0",
    "react-native-paper": "^5.9.1",
    "react-native-safe-area-context": "^4.7.1",
    "react-native-screens": "^3.23.0",
    "react-native-tab-view": "^3.5.2",
    "react-native-vector-icons": "^10.0.0",
    "react-native-webview": "^13.3.0",
    "react-native-youtube-iframe": "^2.3.0",
    "react-redux": "^8.1.1",
    "redux": "^4.2.1",
    "redux-thunk": "^2.4.2"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/eslint-config": "^0.72.2",
    "@react-native/metro-config": "^0.72.9",
    "@tsconfig/react-native": "^3.0.0",
    "@types/react": "^18.0.24",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.2.1",
    "eslint": "^8.19.0",
    "jest": "^29.2.1",
    "metro-react-native-babel-preset": "0.76.7",
    "prettier": "^2.4.1",
    "react-test-renderer": "18.2.0",
    "typescript": "4.8.4"
  },
  "engines": {
    "node": ">=16"
  }
}
